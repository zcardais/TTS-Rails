<h1>Listing departments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Budget</th>
      <th>Start date</th>
      <th>Instructor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.budget %></td>
        <td><%= department.start_date %></td>
        <td><%= department.instructor_id %></td>
        <td><%= link_to 'Show', department %></td>
        <td><%= link_to 'Edit', edit_department_path(department) %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

